# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=mtpdb

# JWT Configuration
# IMPORTANT: Generate strong random secrets for production
# You can generate secrets using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_change_this_in_production_min_32_chars
JWT_REFRESH_SECRET=your_jwt_refresh_secret_change_this_in_production_min_32_chars
JWT_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# Redis Configuration (optional - for token blacklisting and rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration
EMAIL_SERVICE=resend
EMAIL_FROM=noreply@yourdomain.com
RESEND_API_KEY=your_resend_api_key_here

# OAuth Configuration (optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
API_URL=http://localhost:3000

# Security
NODE_ENV=development
CORS_ORIGIN=http://localhost:3001
SESSION_SECRET=your_session_secret_change_this_in_production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX=5
REGISTER_RATE_LIMIT_MAX=3